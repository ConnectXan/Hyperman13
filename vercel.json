{
    "version": 2,
    "outputDirectory": "client/dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/client/dist/assets/$1"
        },
        {
            "source": "/favicon.png",
            "destination": "/client/dist/favicon.png"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/client/dist/index.html"
        }
    ]
}